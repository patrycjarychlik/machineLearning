<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/introSlide2Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="example problems for"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35px" />


        <TextView
            android:text="Classification"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:padding="15dp"
            android:textStyle="bold"

            android:background="#4d24745a"
            android:layout_width="240dp"
            android:layout_height="125dp"
            android:gravity="center"
            />

        <View
            android:layout_margin="30dp"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="#ffffff"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spam Detection"
            android:textColor="@android:color/white"
            android:textSize="35px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="Is this email Spam or Ham?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentiment Analysis"
            android:textColor="@android:color/white"
            android:textSize="35px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="Is this tweet positive or negative?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trading strategy"
            android:textColor="@android:color/white"
            android:textSize="35px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="Is this trading day going to be an up-day or down-day?"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="35px" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>