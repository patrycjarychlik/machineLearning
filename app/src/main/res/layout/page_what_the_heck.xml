<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/introSlide3Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Learning Process"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="205dp"
            android:layout_height="205dp"
            app:srcCompat="@drawable/process" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What the heck?"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="When working on applied ML problems you develop a pattern for quickly getting to good robust results.
Once developed, you can use this process again and again on project after project."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>