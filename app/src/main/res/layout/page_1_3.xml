<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/introSlide3Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's assume we are developing a credit card fraud detection system."
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:padding="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="@string/page_1_3_text_1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="@string/page_1_3_text_2"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="@string/page_1_3_text_3"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>