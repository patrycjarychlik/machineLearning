<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/introSlide2Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machine Learning Algorithms"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:padding="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sample_robot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="There are two main types of algorithms:"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="@string/page_1_4_supervised"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/intro_desc_padding"
            android:paddingRight="@dimen/intro_desc_padding"
            android:text="@string/page_1_4_unsupervised"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/intro_slide_desc" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>